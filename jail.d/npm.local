# /etc/fail2ban/jail.d/npm.local
[npm]
enabled = true
filter = npm-filter
logpath = /home/moniika/docker/nginxProxyManager/ng-data/logs/fallback_access.log
          /home/moniika/docker/nginxProxyManager/ng-data/logs/proxy-host-*_access.log
ignoreip = 192.168.1.0/24
findtime = 5m
maxretry = 5
bantime  = 1d
bantime.increment = true
bantime.rndtime = 900
bantime.factor = 1
banaction = docker-action