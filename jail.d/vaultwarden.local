# /etc/fail2ban/jail.d/vaultwarden.local
[vaultwarden]
enabled = true
filter = vaultwarden-filter
logpath = /home/moniika/docker/vaultwarden/data/logs/access.log
ignoreip = 192.168.1.0/24
findtime = 5m
maxretry = 5
bantime  = 1d
bantime.increment = true
bantime.rndtime = 900
bantime.factor = 1
banaction = docker-action
